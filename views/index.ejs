<%- include('./partials/header') %>

    <main>

        <img src='<%= pokemon ? pokemon.sprites.front_default : '' %>' class='pokemon_image'><img>

        <h1 class='pokemon_data'>
            <span class='pokemon_number'><%= pokemon ? pokemon.id : '' %></span>
            <span class='pokemon_name'><%= pokemon ? pokemon.name : '' %></span>
        </h1>

        <form action='/search' method='POST'>
            <input type='search' name='pokemon' class='input_search' placeholder='Search' required>
        </form>

        <div class='buttons'>
            <button class='button btn-prev'>Prev &lt;</button>
            <button class='button btn-next'>Next &gt;</button>
        </div>

        <img src='../images/pokedex.png' class='pokedex' alt='pokedex'>

    </main>

    <%- include('./partials/footer') %>